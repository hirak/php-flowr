<?xml version="1.0" encoding="UTF-8"?>
<phpunit
  colors="true"
  bootstrap="tests/bootstrap.php">
  <logging>
    <log type="coverage-html" target="coverage" charset="UTF-8"
        highlight="true"/>
  </logging>
  <filter>
    <whitelist>
      <directory suffix=".php">src</directory>
    </whitelist>
  </filter>
  <testsuite name="UnitTest">
    <directory>tests/</directory>
  </testsuite>
</phpunit>
